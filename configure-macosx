#!/bin/sh

CFLAGS="-arch ppc -arch i386" CXXFLAGS="-arch i386 -arch ppc"  LDFLAGS="-arch i386 -arch ppc" LIBS="-lintl" ./configure --disable-dependency-tracking --prefix=`pwd`"/Toppler.app/Contents/Resources/toppler" --exec-prefix=`pwd`"/Toppler.app/Contents/MacOS" --bindir=`pwd`"/Toppler.app/Contents/MacOS"
